{
  "include": ["*.ts", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
